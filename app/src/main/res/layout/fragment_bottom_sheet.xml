<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/bottom_sheet_margin"
        android:paddingTop="8dp"
        android:paddingEnd="@dimen/bottom_sheet_margin"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/modal_result_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#292929"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/bottom_sheet_margin"
        android:paddingTop="8dp"
        android:paddingEnd="@dimen/bottom_sheet_margin"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#292929"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#EFEFEF" />

    <TextView
        android:id="@+id/openBrowser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:drawablePadding="30dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="15dp"
        android:text="@string/modal_option_browser"
        android:textColor="#292929"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_url" />

    <TextView
        android:id="@+id/shareResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:drawablePadding="30dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="15dp"
        android:text="@string/modal_option_share"
        android:textColor="#292929"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/copyResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:drawablePadding="30dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="15dp"
        android:text="@string/modal_option_copy"
        android:textColor="#292929"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_content_copy" />

</LinearLayout>